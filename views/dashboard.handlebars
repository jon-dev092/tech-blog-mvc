{{!-- displays a user's blog dashboard. --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

{{!-- contains a form for creating a new blog post, with input fields for the blog title and message, as well as a submit button --}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-title">Blog Title:</label>
        <input class="form-input" type="text" id="project-title" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-message">description:</label>
        <textarea class="form-input" id="project-message" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blog.length}}
  <div class="col-md-6 project-list">
    <h3>Current Blogs:</h3>

    {{#each blog as |blogs|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{blogs.title}}</h4>
        <p>{{blogs.message}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogs.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/blog.js"></script>
